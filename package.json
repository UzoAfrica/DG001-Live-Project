{
  "devDependencies": {
    "husky": "^9.1.5",
    "lint-staged": "^15.2.9"
  },
  "scripts": {
    "prepare": "husky"
  },
  "lint-staged": {
    "frontend/src/*.{js,ts,tsx,jsx}": [
      "cd frontend && npx eslint . --fix",
      "cd frontend && npx prettier . --write",
      "git add"
    ],
    "backend/src/*.{js,ts}": [
      "cd backend && npx eslint . --fix",
      "cd backend && npx prettier . --write",
      "git add"
    ]
  }
}
